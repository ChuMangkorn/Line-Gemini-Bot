{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        "*.log"
      ],
      "runtime": "nodejs22"
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/webhook",
        "function": "webhook"
      },
      {
        "source": "/dashboard",
        "function": "dashboard"
      },
      {
        "source": "/login",
        "function": "login"
      },
      {
        "source": "/sessionLogin",
        "function": "sessionLogin"
      },
      {
        "source": "/sessionLogout",
        "function": "sessionLogout"
      },
      {
        "source": "/getFirebaseConfig",
        "function": "getFirebaseConfig"
      },
      {
        "source": "/api/blockUser",
        "function": "blockUser"
      },
      {
        "source": "/api/sendBroadcast",
        "function": "sendBroadcast"
      },
      {
        "source": "/api/getErrors",
        "function": "getErrors"
      },
      {
        "source": "/api/adminReply",
        "function": "adminReply"
      },
      {
        "source": "/health",
        "function": "health"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  },
  "firestore": {
    "database": "(default)",
    "location": "asia-southeast1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}